<h1>Books</h1>
<table>
 <thead>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
  </tr>
 </thead>
 <% @books.each do |book| %>
 <tbody>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td>
      <a class="show_91701" href="/books/<%= book.id %>">Show</a>
    </td>
    <td>
      <a class="edit_91701" href="/books/<%= book.id %>/edit">Edit</a>
    </td>

    <td>
     <a data-confirm="Are you sure?" class="destroy_91701" rel="nofollow" data-method="delete" href="/books/<%= book.id %>">Destroy</a>
    </td>
  </tr>
 </tbody>
 <% end %>
</table>
<h2>New book</h2>
<%= form_with model: @book, method: :post do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <h4>
  <%= f.submit 'Create Book' %>

<% end %>

